<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url:registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :role, "Veuillez indiquer le role que vous desirez avoir dans la plateforme" %><br />
    <%= f.text_field :role, autofocus: true, placeholder: "Eleveur / Client" %>
  </div>

  <div class="field" style="display:flex;">
    <%= f.label :last_name, "Nom" %><br />
    <%= f.text_field :last_name, autofocus: true %>
    <span>    </span>
    <%= f.label :photo, "DÃ©finir une photo de profile" %>
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :first_name, "Prenom" %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :sex, "Sexe" %><br />
    <%= f.text_field :sex, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :country, "Nationalite" %><br />
    <%= f.text_field :country, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :city, "Ville" %><br />
    <%= f.text_field :city, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :phone, "Numero de telephone" %><br />
    <%= f.text_field :phone, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, "Adresses" %><br />
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "Adresse e-mail" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Mot de passe" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation du mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
