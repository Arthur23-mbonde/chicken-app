<%= form_tag product_payments_path do %>
    <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.application.credentials.dig(:stripe, :pk) %>"
        data-description="A month's subscription"
        data-amount="<%= @product.current_price %>"
        data-locale="auto">
    </script>
<% end %>