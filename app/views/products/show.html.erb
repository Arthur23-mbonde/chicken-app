<p style="color: green"><%= notice %></p>

<%= render @product %>

<div>
  <% if current_user && current_user.role == "Eleveur" %>
    <%= link_to "Edit this product", edit_product_path(@product) %>
    <%= link_to "Back to products", products_path %>
    <%= button_to "Destroy this product", @product, method: :delete %>
  <% else %>
    <%= link_to "Back to products", products_path %>
  <% end %>
</div>

<% if current_user %>
  <div class="my-4 py-2">
    <%= link_to "Acheter", new_product_payment_path(@product), class:"btn btn-success" %>
  </div>
<% else %>

<% end %>
